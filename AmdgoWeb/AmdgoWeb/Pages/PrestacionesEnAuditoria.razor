@page "/prestacionesEnAuditoria"

<DxFormLayout CssClass="MainForm-Small">
    <DxFormLayoutGroup Caption="Prestaciones En Auditoria:" ColSpanMd="12">

        <DxFormLayoutItem Caption="Prescriptor:" ColSpanLg="12" ColSpanMd="6" ColSpanSm="12" BeginRow="true">
            <DxComboBox Data="@Prescriptores" Value="@Value"></DxComboBox>
        </DxFormLayoutItem>


        <DxFormLayoutItem Caption="Fecha desde:" ColSpanLg="10" ColSpanMd="6" ColSpanSm="6" BeginRow="true">
            <DxDateEdit Date="DateTime.Today" />
        </DxFormLayoutItem>

        <DxFormLayoutItem Caption="Fecha Hasta:" ColSpanLg="10" ColSpanMd="6" ColSpanSm="12" BeginRow="true">
            <DxDateEdit Date="DateTime.Today" />
        </DxFormLayoutItem>


        <DxFormLayoutItem ColSpanLg="12" ColSpanMd="6" ColSpanSm="10" BeginRow="true">
            <DxButton Text="Consultar" SizeMode="SizeMode.Medium" style="margin: 0 auto;" />
        </DxFormLayoutItem>
    </DxFormLayoutGroup>
</DxFormLayout>


@code {
    //Usamos este parametro para comenzar una nueva fila
    public bool BeginRow { get; set; } = true;
    //Usamos este parametro para establecer numero de filas por pagina
    public int PageSize { get; set; }

    public string Value { get; set; } = "";

    public bool Checked { get; set; } = false;

    public List<string> Prescriptores { get; set; } = new List<string>()
    {
        "Doctor 1",
        "Doctor 2",
        "Doctor 3",
        "Doctor 4",
        "Doctor 5"
    };
}
